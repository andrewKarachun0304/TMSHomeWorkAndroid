<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hw2.AnimationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dance_flor"
        android:scaleType="centerCrop"
        android:contentDescription="@string/dance_flor_background_description_str" />

    <ImageView
        android:id="@+id/animationIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:contentDescription="@string/cat_animation_description_str" />

</androidx.constraintlayout.widget.ConstraintLayout>