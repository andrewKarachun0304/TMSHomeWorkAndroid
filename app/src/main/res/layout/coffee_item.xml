<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp">

    <ImageView
        android:id="@+id/coffee_iv_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/coffee_background_str" />

    <TextView
        android:id="@+id/coffee_name_tv_item"
        style="@style/MyTextViewStyleHW4"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coffee_iv_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coffee_price_tv_item"
        style="@style/MyTextViewStyleHW4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coffee_iv_item"
        app:layout_constraintTop_toBottomOf="@+id/coffee_name_tv_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/blue_custom_color"
        app:layout_constraintTop_toBottomOf="@+id/coffee_iv_item"
        tools:layout_editor_absoluteX="10dp"
        android:layout_marginTop="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>